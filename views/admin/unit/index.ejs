
<%- include("../../partials/header") %>

<div class="container">

    <header class="jumbotron">

    
        <div class="container">
            
            <h1>
                Unit Data
            </h1>
    
            <!-- <p>
                List of units
            </p> -->
    
            <p>
    
            </p>
    
        </div>
    </header>    


<div class="panel panel-primary">

    <div class="panel-heading">
        <h4 id="datatype_header">Find Items
            <input id="myInput" type="text" placeholder="Search..">
        </h4>
    </div>

    
    <div class="panel-body">

        <table id="measurement-form" class="center">
            
            <colgroup>
                <col span="1" style="width: 15%;"> 
                <col span="1" style="width: 5%;">
                <col span="1" style="width: 5%;">
                <col span="1" style="width: 5%;">
                <col span="1" style="width: 5%;">
                <col span="1" style="width: 5%;">    
                <col span="1" style="width: 5%;">    
                <col span="1" style="width: 5%;">    
                <col span="1" style="width: 5%;">    
                <col span="1" style="width: 10%;">    
                <col span="1" style="width: 10%;">    
                <col span="1" style="width: 5%;">    
                <col span="1" style="width: 10%;">    
                <col span="1" style="width: 10%;">                                
            </colgroup>
            
            <thead>
                <tr>
                    <th><span class="text">Name</span></th>
                    <th><span class="text">Cost</span></th>
                    <th><span class="text">Shooting_Bonus</span></th>
                    <th><span class="text">Fighting_Bonus</span></th>
                    <th><span class="text">Health</span></th>
                    <th><span class="text">Movement</span></th>  
                    <th><span class="text">Cohesion</span></th>  
                    <th><span class="text">Size</span></th>  
                    <th><span class="text">Sprite_Offset</span></th>  
                    <th><span class="text">Spritesheet</span></th>  
                    <th><span class="text">Death_SFX</span></th>  
                    <th><span class="text">Symbol_ID</span></th>  
                    <th><span class="text">Created</span></th> 
                    <th><span class="text">Updated</span></th>                         							
                </tr>
            </thead>
            
            <tbody>	
                    <% data.forEach((item) =>  { %>
                        <tr class="row_data">

                            <td><%- item.name %> </td>  
                            <td><%- item.cost %> </td> 
                            <td><%- item.shooting_bonus %> </td>                        
                            <td><%- item.fighting_bonus %> </td> 
                            <td><%- item.health %> </td> 
                            <td><%- item.movement %> </td> 
                            <td><%- item.cohesion %> </td> 
                            <td><%- item.size %> </td> 
                            <td><%- item.sprite_offset %> </td> 
                            <td><%- item.spritesheet %> </td> 
                            <td><%- item.death_sfx %> </td> 
                            <td><%- item.symbol_id %> </td> 
                            <td><%- item.created_date %> </td> 
                            <td><%- item.updateddate %> </td> 
                            
                            
                        </tr>
                    <% }) %>

            </tbody>
        </table>



        </div>


</div>

<div class="top-padding">
    <a href="/">Go Back</a>
</div>

</div>


<script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $(".row_data").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
</script>

