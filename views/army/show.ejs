    // ADD A SUBSECTION TO THE PARENT OF "THIS" OBJECT
	function add_subsection_function(){

		let parent = $(this).parent();

		add_subsection(parent)

		}

		function add_subsection(parent){


		let parent_span = $(parent[0]).find("span")[0].innerText
		let text_number = 'Troop '+(parent.children().find('.subsection').length + 1)
		let number = $(".subsection").length + 1        


		let markup = `        
		<li class="ui-state-default subsection tr-grab" id="subsection_`+number+`">         

			<div class="box">
				<span>`+text_number+`</span>

				<select name="Report[`+parent_span+`][`+text_number+`][params][id]" type="number" class="full-width form-control subsection-options">

					<option value=""></option>

				</select>
			</div>

			<div class="box">
				<span>Alternate Name</span>
				<input class="form-control subsection-name" type="text" name="Report[`+parent_span+`][`+text_number+`][params][name]" placeholder="name" >
			</div>

			<div class="box">
				<span>Show Analysis Box</span>
				<select name="Report[`+parent_span+`][`+text_number+`][params][show_analysis_box]" type="number" class="full-width form-control subsection-dropdown" multiple size="1">
					<option value="1">Y</option>
				</select>

				
			</div>

			<ul class="sortable sortable-paragraphs">
			
			</ul>            

			<% //if(user.id === report.owner) { %>   
				<button class="btn btn-primary delete-subsection right-button" type="button">
					Delete Troop
				</button>	                
			<% //} %>   

		</li>                
		`


		//GET PARENT OF BUTTON THEN FULE SORTABLE SECTION UL WITHIN CHILDREN AND APPEND MARKUP
		// $(this).parent().children('.sortable-subsections').append(markup)
		parent.children('.sortable-subsections').append(markup)
		let subsection_button = $("#subsection_"+number).children('.add-paragraph')

		let delete_subsection_button = $("#subsection_"+number).children('.delete-subsection')
		delete_subsection_button.click(delete_parent_function);

		<% //if(user.id === report.owner) { %>         
			updateSortable()       
		<% //} %>

		let return_data = $("#subsection_"+number)
		return return_data
	}


