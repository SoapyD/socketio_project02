
<%- include("../partials/header") %>

<div class="container">
	
	<h1 style="text-align:center;">
		Edit Army
	</h1>

	<div class="row">
		
		<div style="width:30%; margin:30px auto; ">			
			<form action="/army/<%= army._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<p>Army Name:</p>
					<input class="form-control" type="text" name="params[name]" placeholder="name" value="<%= army.name %>">
				</div>

				<div class="form-group">                        
					<p>Faction:</p>
					<select class="form-control" name="params[faction]" required>
						<option value=""></option>
						<% factions.forEach((faction) => { %>
							<option value="<%= faction._id %>" 
								<% if(army.faction.name === faction.name) { %>
									selected
								<% } %>							
							>
								<%= faction.name %>
							</option>
						<% }) %>
					</select>                                
				</div> 

				<div class="form-group">     
					<p>Army Total Cost:</p>
					<input class="form-control" type="text" name="params[cost]" value="<%= army.cost %>" required>
				</div>

				<div class="form-group">					
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>						
				</div>				

			</form>
			<a href="/army/<%= army._id %>">Go Back</a>
		</div>
		
	</div>
	
</div>


<%- include("../partials/footer") %>
